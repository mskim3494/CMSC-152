#include <stdlib.h>
#include <math.h>
#include <stdio.h>
#include <string.h>

#include "raytracer.h"

void stage_show(FILE *f, stage stg)
{
    camera_show(f, stg.c);
    scene_show(f,stg.s);
    return;
}

stage get_stage(unsigned int selection)
{
    camera test_camera_1= new_camera(v3_expr(0,0,-5), 240, 240);
    object s;
    sphere sphere1= sphere_expr(v3_expr(0,0,3),1, &bluish, rgb_expr(0,0,0));
    light light1= new_light(v3_norm(v3_expr(-1,1,-1)), rgb_expr(1,1,1));
    s.tag= SPHERE;
    s.o.s= sphere1;
    obj_list* sphere_list= ol_singleton(s);
    scene test_scene_1= new_scene(rgb_expr(0.3,0.6,1.0),
                                  sphere_list, light1, rgb_expr(0.2,0.2,0.2));
    stage test_stage_1;
    test_stage_1.c= test_camera_1;
    test_stage_1.s= test_scene_1;
    
    
    poster poster1= poster_expr(v3_expr(-1.0,1.0,4.0),2.0, 1.0, &red, rgb_expr(0,0,0));
    object p;
    p.tag= POSTER;
    p.o.p= poster1;
    obj_list* poster_list= ol_singleton(p);
    scene test_scene_2= new_scene(rgb_expr(0.3,0.6,1.0),
                                  poster_list, light1, rgb_expr(0.2,0.2,0.2));
    stage test_stage_2;
    test_stage_2.c= test_camera_1;
    test_stage_2.s= test_scene_2;
    
    stage test_stage_3;
    camera test_camera_2= new_camera(v3_expr(0,0,-5), 240, 240);
    object ws, rs;
    sphere white_sphere= sphere_expr(v3_expr(-0.5,0.7,3), 0.5, &white, rgb_expr(0,0,0));
    sphere red_sphere= sphere_expr(v3_expr(1,0,4), 1, &red, rgb_expr(0,0,0));
    ws.tag = SPHERE;
    rs.tag = SPHERE;
    ws.o.s= white_sphere;
    rs.o.s= red_sphere;
    obj_list* spheres= ol_cons(ws, ol_singleton(rs));
    scene test_scene_3= new_scene(rgb_expr(0.3,0.6,1.0),
                                  spheres, light1, rgb_expr(0.2,0.2,0.2));
    test_stage_3.c= test_camera_2;
    test_stage_3.s= test_scene_3;
    
    stage test_stage_4;
    sphere sphere2= sphere_expr(v3_expr(0,0,3), 1,&weird, rgb_expr(0,0,0));
    object s2;
    s2.tag= SPHERE;
    s2.o.s= sphere2;
    obj_list* sphere2_list= ol_singleton(s2);
    scene test_scene_4= new_scene(rgb_expr(0.3,0.6,1.0),
                                  sphere2_list, light1, rgb_expr(0.2,0.2,0.2));
    test_stage_4.c= test_camera_1;
    test_stage_4.s= test_scene_4;
    
    switch(selection){
        case 0:
            return test_stage_1;
            break;
        case 1:
            return test_stage_2;
            break;
        case 2:
            return test_stage_3;
            break;
        case 3:
            return test_stage_4;
            break;
        default:
            fprintf(stderr, "invalid stage selection");
            exit(1);
    }
    ol_free(sphere_list);
    ol_free(poster_list);
    ol_free(spheres);
    ol_free(sphere2_list);
}